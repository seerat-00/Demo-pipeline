pipeline {
    agent any

    environment {
        EMAIL_RECIPIENTS = 'iseeratsharmash@gmail.com'
    }

    stages {
        stage('Build') {
            steps {
                script {
                    echo 'Building the project... (mvn clean package)'
                }
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                script {
                    echo 'Running unit and integration tests... (mvn test)'
                }
            }
        }

        stage('Code Analysis') {
            steps {
                script {
                    echo 'Running static code analysis... (mvn sonar:sonar)'
                }
            }
        }

        stage('Security Scan') {
            steps {
                script {
                    echo 'Running security scan... (mvn dependency-check:check)'
                }
            }
            post {
                always {
                    script {
                        emailext (
                            subject: "Security Scan Results",
                            to: "${EMAIL_RECIPIENTS}",
                            body: "Security scan completed. Check logs for details.",
                            attachLog: true
                        )
                    }
                }
            }
        }

        stage('Deploy to Staging') {
            steps {
                script {
                    echo 'Deploying to staging... (scp target/*.jar user@staging-server:/app/)'
                }
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                script {
                    echo 'Running integration tests on staging... (curl -X GET http://staging-server/api/health)'
                }
            }
        }

        stage('Deploy to Production') {
            steps {
                script {
                    echo 'Deploying to production... (scp target/*.jar user@production-server:/app/)'
                }
            }
        }
    }

    post {
        always {
            script {
                emailext (
                    subject: "Pipeline Execution Report",
                    to: "${EMAIL_RECIPIENTS}",
                    body: "Pipeline execution completed. Check logs for details.",
                    attachLog: true
                )
            }
        }
    }
}
