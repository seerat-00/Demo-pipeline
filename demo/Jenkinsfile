pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/seerat-00/Demo-pipeline.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building the application...'
                bat 'echo Build process running...'  // Replace with actual build command
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                echo 'Running Unit and Integration Tests...'
                bat 'echo Running tests...'  // Replace with actual test command
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Performing Code Analysis...'
                bat 'echo Code analysis in progress...'  // Replace with actual analysis command
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Performing Security Scan...'
                bat 'echo Running security scan...'  // Replace with actual security scan command
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to Staging...'
                bat 'echo Deploying to Staging environment...'  // Replace with actual deployment command
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'Running Integration Tests on Staging...'
                bat 'echo Running staging tests...'  // Replace with actual test command
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Deploying to Production...'
                bat 'echo Deploying to Production environment...'  // Replace with actual deployment command
            }
        }
    }

    post {
        failure {
            echo 'Pipeline failed. Check logs for errors.'
        }
    }
}
